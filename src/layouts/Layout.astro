---
const imageSrc = "/profile.jpg";
import Sidebar from "../components/Sidebar.astro";
import Social from "../components/Social.astro";
const LogoSrc = "/Logo.png";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/Logo.png" />
    <meta name="generator" content={Astro.generator} />
    <title>Jose Molleda</title>
  </head>
  <body class="flex w-full h-screen overflow-hidden">
    <!-- Aside izquierdo -->
    <aside class="w-[18%] h-full bg-[#486285] flex flex-col items-center py-4">
      <slot name="jl" />
      <img src={imageSrc} alt="Profile Picture" class="w-40 h-40 rounded-full object-cover transition-transform duration-200 hover:scale-105 mt-4" />
      <div class="mt-4 w-full flex flex-col items-center">
        <Sidebar />
      </div>
      <div class="mt-auto mb-4">
        <Social />
      </div>
    </aside>

    <!-- Contenido principal -->
    <main class="w-[64%] h-full bg-[#f9eaea] flex flex-col overflow-y-auto p-6">
      <slot name="mr" />
    </main>

    <!-- Aside derecho -->
    <aside class="w-[18%] h-full bg-[#ccd6e3] flex flex-col items-end justify-end p-4">
      <slot name="ab" />
      <img src={LogoSrc} alt="Logo Picture" class="w-10 h-10 bg-white rounded-full" />
    </aside>
  </body>
</html>
