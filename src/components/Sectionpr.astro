---
// Puedes importar un array de posts si quieres usar datos din√°micos
const posts = [
  {
    title: "CSS",
    description: "Notes on Box Model.",
    badge: "New",
    tags: ["rust", "tokio"],
    icon: "fa-brands fa-css3-alt",
    color: "#283a98",
    link: "/CSS"
  }, 
  {
    title: "HTML",
    description: "Notes on Box Model.",
    badge: "New",
    tags: ["rust", "tokio"],
    icon: "fa-brands fa-html5",
    color: "#e68633",
    link: "/HTML"
  },   
];

---

<section class="pt-2">
  {posts.map(post => (
    <a href={post.link} class="block no-underline">
      <div class="flex items-start pb-4 border-b-[0.03rem] border-b-slate-400 mb-5 transform transition-transform duration-300 hover:scale-[1.01] rounded">
        <div class="w-44 h-32 bg-white flex items-center justify-center rounded-md dark:bg-[#24364d]">
          {post.icon.includes(".png") || post.icon.includes(".jpg") || post.icon.includes(".svg") ? (
            <img src={post.icon} alt="icon" class="h-16 w-16 object-contain" />
          ) : (
            <i class={`text-8xl text-center ${post.icon}`} style={`color: ${post.color}`}></i>
          )}
        </div>
        <div class="flex-1">
          <div class="flex items-center gap-2">
            <h3 class="text-xl font-bold text-slate-900 dark:text-white">{post.title}</h3>
            {post.badge && (
              <span class="text-white bg-fuchsia-500 text-sm font-semibold px-3 py-1 rounded-full">{post.badge}</span>
            )}
          </div>
          <p class="text-slate-600 mt-2 dark:text-slate-300">{post.description}</p>
          {post.tags.length > 0 && (
            <div class="flex gap-2 mt-4">
              {post.tags.map(tag => (
                <span class="border border-slate-800 text-slate-800 dark:text-white text-sm px-3 py-1 rounded-full">{tag}</span>
              ))}
            </div>
          )}
        </div>
      </div>
    </a>
  ))}
</section>


<!-- Agrega Font Awesome para los iconos -->
