---
// Puedes importar un array de posts si quieres usar datos din√°micos
const posts = [
  {
    title: "CSS",
    description: "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.",
    badge: "New",
    tags: ["rust", "tokio"],
    icon: "fa-css3-alt",
    color: "#283a98"
  },
  {
    title: "JavaScript",
    description: "JS es un lenguaje poderoso para la web.",
    badge: "Popular",
    tags: ["node", "express"],
    icon: "fa-js-square",
    color: "#f7df1e"
  }
];
---

<section class="pt-2">
  {posts.map(post => (
    <div class="flex items-start pb-4 border-b-[0.03rem] border-b-slate-400 mb-5 transform transition-transform duration-300 hover:scale-[1.01]">
      <div class="w-44 h-32 bg-gray-100 flex items-center justify-center rounded-md dark:bg-[#1c2b3e]">
        <i class={`fa-brands ${post.icon} text-8xl text-center`} style={`color: ${post.color}`}></i>
      </div>
      <div class="flex-1">
        <div class="flex items-center gap-2">
          <h3 class="text-xl font-bold text-slate-900">{post.title}</h3>
          {post.badge && (
            <span class="text-white bg-fuchsia-500 text-sm font-semibold px-3 py-1 rounded-full">{post.badge}</span>
          )}
        </div>
        <p class="text-slate-600 mt-2">{post.description}</p>
        {post.tags.length > 0 && (
          <div class="flex gap-2 mt-4">
            {post.tags.map(tag => (
              <span class="border border-slate-800 text-slate-800 text-sm px-3 py-1 rounded-full">{tag}</span>
            ))}
          </div>
        )}
      </div>
    </div>
  ))}
</section>


<!-- Agrega Font Awesome para los iconos -->
<script src="https://kit.fontawesome.com/180054f428.js" crossorigin="anonymous"></script>